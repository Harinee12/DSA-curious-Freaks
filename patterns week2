import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner SC=new Scanner(System.in);
        int n=SC.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n-i+1;j++){
                System.out.print("*");
            }
            System.out.println("");
        }
    }
}
output: sample 1
6
